{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "esnext"],
    "strict": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/global.d.ts",
    "src/jsx.d.ts",
    "src/**/*.{ts,tsx}"
  ],
  "exclude": ["node_modules"]
}
